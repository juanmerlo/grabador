<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juanmartin.grabador.Play"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="20dp"
    android:background="@color/negroFondo"
    >

    <ListView
        android:id="@+id/listaAudios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/nombreAudioReproduciendo"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/colorLetra"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/tiempoTranscurrido"
            android:layout_width="0dp"
            android:text="00:00"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/colorLetra"

            />
        <ProgressBar
            android:id="@+id/barraProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:padding="3dp"

            />
        <TextView
            android:id="@+id/tiempoTotal"
            android:text="00:00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/colorLetra"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="8"
        android:paddingTop="5dp"        >
        <Button
            android:id="@+id/atras"
            android:background="@drawable/boton_atras_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <Button
            android:id="@+id/reproducir"
            android:background="@drawable/boton_reproducir_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <Button
            android:id="@+id/pararReproduccion"
            android:background="@drawable/boton_stop_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <Button
            android:id="@+id/adelante"
            android:background="@drawable/boton_adelante_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />


    </LinearLayout>


</LinearLayout>
