<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="12"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/itemicono"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorLetra"
            android:text="Audio234.mp3"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/textoFecha"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorLetra"
            android:text="06/07/16"
            android:gravity="left"
            android:textSize="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/textoTiempo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="23:54"
            android:textColor="@color/colorLetra"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/pesoBytes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorLetra"
            android:text="1000 bytes"
            android:gravity="right"
            android:textSize="10dp"
            />

    </LinearLayout>



</LinearLayout>