<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juanmartin.grabador.Play"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="20dp"
    android:background="@color/negroFondo"
    >

    <ListView
        android:id="@+id/listaAudios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingBottom="20dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="8"
        >
        <Button
            android:id="@+id/atras"
            android:background="@drawable/boton_atras_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/reproducir"
            android:background="@drawable/boton_reproducir_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/pararReproduccion"
            android:background="@drawable/boton_stop_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/adelante"
            android:background="@drawable/boton_adelante_plano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ProgressBar
            android:id="@+id/barraProgreso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

    </LinearLayout>


</LinearLayout>
